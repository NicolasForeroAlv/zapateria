{
  "name": "zapateria-app",
  "version": "1.0.0",
  "description": "Aplicación de Zapatería con autenticación JWT y pruebas automatizadas",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-session": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "supertest": "^6.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
